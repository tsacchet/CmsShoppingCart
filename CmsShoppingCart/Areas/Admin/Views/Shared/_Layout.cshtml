<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            @*<a href="/admin/dashboard" class="navbar-brand">Dashboard</a>*@
            @Html.ActionLink("Dashboard", "index", "Dashboard", null, new { @class = "navbar-brand" })

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Pages", "index", "pages", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Sidebar", "EditSidebar", "pages", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categories", "Categories", "shop", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Products", "Products", "shop", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Orders", "Orders", "shop", null, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav">
                    <a href="~/home" class="navbar-brand text-warning" target="_blank">ShoppingCart</a>

                </ul>
            </div>
        </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>

        @Scripts.Render("~/bundles/scripts")

        @RenderSection("scripts", required: false)
</body>
</html>
